    "version": "0.2.0",
    "configurations": [
        {
            "name": "Just Play",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/justplay.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Bruteforce",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bruteforce.py",
            "console": "integratedTerminal",
            "args": [
                "--games-count",
                "10000000"
            ]
        },
        {
            "name": "Train ML",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/machine_learning_training.py",
            "console": "integratedTerminal",
            "args": [
                "--total_timesteps",
                "1000"
            ]
        },
        {
            "name": "Evaluate ML",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/machine_learning_evaluate.py",
            "console": "integratedTerminal",
            "args": [
                "--model-name",
                "ppo_trained_model.zip"
            ]
        }
    ]
}